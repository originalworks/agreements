{
    "name": "@originalworks/agreements-contracts",
    "version": "0.0.1",
    "files": [
        "*.sol",
        "agreements/",
        "interfaces/",
        "shared/"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/originalworks/agreements.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "clean": "find . -mindepth 1 ! -name 'package.json' -exec rm -rf {} +",
        "build": "npm run clean && cp -r ../../contracts/* ./",
        "release": "ts-node ../release.ts"
    },
    "dependencies": {
        "@openzeppelin/contracts": "5.3.0",
        "@openzeppelin/contracts-upgradeable": "5.3.0"
    }
}